<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_coke"
            android:layout_margin="8dp"
            android:layout_marginTop="29dp"
            />

        <TextView
            android:id="@+id/cokeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="60sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="8sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/cokeRed"
            />

        <Button
            android:id="@+id/cokeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vote"
            android:textSize="35sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:padding="15dp"
            android:background="@color/cokeRed"
            android:onClick="cokeClick"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pepsi"
            android:layout_margin="8dp"
            android:layout_marginTop="29dp"
            />

        <TextView
            android:id="@+id/pepsiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="60sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="8sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/pepsiBlue"
            />

        <Button
            android:id="@+id/pepsiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vote"
            android:textSize="35sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:padding="15dp"
            android:background="@color/lightBlue"
            android:onClick="pepsiClick"
            />

    </LinearLayout>

</LinearLayout>